# PIPTip Environment Configuration Template
# Copy this file to .env and fill in your values

# Discord Configuration (REQUIRED)
DISCORD_TOKEN=your_discord_bot_token_here
DISCORD_APPLICATION_ID=your_discord_app_id_here
DISCORD_CLIENT_ID=your_discord_app_id_here
GUILD_ID=your_primary_guild_id_here

# Discord Webhook for Monitoring Alerts (OPTIONAL)
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/your_webhook_here

# Database Configuration (REQUIRED)
# For production with Supabase PgBouncer:
DATABASE_URL="postgresql://user:pass@host:port/database?pgbouncer=true&connection_limit=1"

# Abstract Chain Configuration (REQUIRED)
ABSTRACT_RPC_URL=https://api.testnet.abs.xyz
ABSTRACT_CHAIN_ID=2741
TREASURY_AGW_ADDRESS=0xYourTreasuryAddressHere
AGW_SESSION_PRIVATE_KEY=your_private_key_here

# Token Contract Addresses (REQUIRED)
TOKEN_ADDRESS=0xYourMainTokenAddressHere
PENGUIN_TOKEN_ADDRESS=0xYourPenguinTokenAddressHere
ICE_TOKEN_ADDRESS=0xYourIceTokenAddressHere
PEBBLE_TOKEN_ADDRESS=0xYourPebbleTokenAddressHere

# Token Configuration
TOKEN_DECIMALS=18

# Fee Configuration (basis points)
HOUSE_FEE_BPS=200
TIP_FEE_BPS=100
WITHDRAWAL_FEE_BASIS_POINTS=25
TIP_TAX_BASIS_POINTS=50
GROUP_TIP_TAX_BASIS_POINTS=100

# Application Configuration
PUBLIC_BASE_URL=http://localhost:3000
PORT=3000
SESSION_SECRET=change_this_to_a_secure_random_string

# Admin Configuration (REQUIRED)
ADMIN_SECRET=super-long-admin-bearer-token
INTERNAL_BEARER=super-long-random-string-here

# Withdrawal Limits
WITHDRAW_MAX_PER_TX=50
WITHDRAW_DAILY_CAP=500

# Monitoring Configuration (OPTIONAL)
ENABLE_METRICS=true
SLOW_QUERY_THRESHOLD_MS=300
ALERT_COOLDOWN_SECONDS=60

# Development/Runtime Configuration
NODE_ENV=production
GIT_SHA=auto_set_by_deployment

# Prisma Configuration (OPTIONAL)
PRISMA_CLIENT_ENGINE_TYPE=binary